#!/bin/sh

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"

[ -n "${JAVA_HOME}" ] && {
  export PATH=$JAVA_HOME/bin:${PATH//${JAVA_HOME}\/bin:}
}

_HOME_BIN=$HOME/bin
export PATH=${_HOME_BIN}:${PATH//${_HOME_BIN}:}
unset _HOME_BIN

command_exists fzf && {
  export FZF_DEFAULT_OPTS="--bind 'ctrl-f:preview-page-down,ctrl-b:preview-page-up,ctrl-d:preview-half-page-down,ctrl-u:preview-half-page-up'"
}
