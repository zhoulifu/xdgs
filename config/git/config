[core]
	pager = delta
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.config/git/attributes
[diff]
	colorMoved = default
[diff "csharp"]
	xfuncname = ^[ \\t]*(((static|public|internal|private|protected|new|virtual|sealed|override|unsafe|async|partial)+[ \\t]+)*[][<>@.~_[:alnum:]]+[ \\t]+[<>@._[:alnum:]]+\\(.*\\))[ \\t]*$
[delta]
	features = default color-moved
[delta "default"]
	light = true
	line-numbers = true
	syntax-theme = GitHub
	commit-style = raw
	file-style = bold
	file-decoration-style = omit
	hunk-header-style = syntax
	hunk-header-decoration-style = bold
	width = variable
[delta "color-moved"]
	map-styles = bold purple => bold strike, bold cyan => syntax bold
